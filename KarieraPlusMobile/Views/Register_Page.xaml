<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KarieraPlusMobile.Views.Register_Page"
             Title="Rejestracja">
    <StackLayout>
        <Entry Placeholder="Imię" x:Name="FirstNameEntry" />
        <Entry Placeholder="Nazwisko" x:Name="SurnameEntry" />
        <Entry Placeholder="E-mail" x:Name="EmailEntry" Keyboard="Email" />
        <Entry Placeholder="Hasło" x:Name="PasswordEntry" IsPassword="True" />
        <Button Text="Zarejestruj się" Clicked="RegisterButton_Clicked" BackgroundColor="#2196F5" TextColor="White" />
        <Label Text="" x:Name="ErrorLabel" TextColor="Red" />
    </StackLayout>
</ContentPage>